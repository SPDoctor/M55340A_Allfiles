<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/restaurant-style.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/popper.js/umd/popper-lite.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/menu-active.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark navbar-custom p-1">
        <a class="navbar-brand" href="@Url.Action("Index", "RestaurantBranches")">Our Restaurants</a>
        <div class="collapse navbar-collapse" id="nav-content">
            <ul class="navbar-nav" id="nav-content">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "RestaurantBranches")">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Create", "Reservation")">Reservation</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "WantedAd")">We Are Hiring</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Create", "JobApplication")">Submit Job Application</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="main-title">
        <h1>Welcome to Our Restaurant</h1>
        <button class="btn-transparent" type="button" onclick="location.href='@Url.Action("Create", "Reservation")'">Reservation Now</button>
    </div>
    <div>
        @RenderBody()
    </div>
    @RenderSection("Scripts", false)
</body>
</html>
